<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Morandi_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/customization_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size"
            app:srcCompat="@drawable/ic_return"
            app:tint="@color/Morandi_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_size"
            android:layout_marginTop="@dimen/margin_size"
            android:layout_marginEnd="@dimen/margin_size"
            android:layout_marginBottom="@dimen/margin_size"
            android:layout_weight="1"
            android:text="自定义"
            android:textColor="@color/Morandi_white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:focusableInTouchMode="true"
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/func_textview"
                style="@style/InfoItem.Account"
                app:sLeftTextString="操作"
                app:sRightTextString="添加" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/attr_textview"
                style="@style/InfoItem.Account"
                app:sLeftTextString="属性"
                app:sRightTextString="账户"/>

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/icon_textview"
                style="@style/InfoItem.Account"
                app:sLeftTextString="图标"
                />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/type1_textview"
                style="@style/InfoItem.Account"
                app:sLeftTextString="一级类别"
                app:sRightTextString=""/>

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/name_textview"
                style="@style/InfoItem.Account"
                app:sLeftTextString="名称"
                app:sRightTextString=""/>

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/input_textview"
                style="@style/EditInfoItem.Leundo"
                app:sEditTextButtonType="none"
                app:sEditTextHint="请输入自定义名称"
                app:sLeftTextString="名称" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/customization_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/closer_margin_size"
            android:layout_weight="1"
            android:background="@color/Morandi_light_rice"
            style="?android:attr/buttonBarButtonStyle"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>