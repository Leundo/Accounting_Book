<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Morandi_black"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flow_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/closer_margin_size"
                    android:layout_marginTop="@dimen/closer_margin_size"
                    android:layout_marginEnd="@dimen/closer_margin_size"
                    android:layout_marginBottom="@dimen/closer_margin_size"
                    android:text="2020年"
                    android:textColor="@color/Morandi_white"
                    android:textSize="@dimen/title_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/all_expenditure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/farther_margin_size"
                    android:layout_marginStart="@dimen/margin_size"
                    android:layout_marginTop="@dimen/margin_size"
                    android:layout_marginEnd="@dimen/margin_size"
                    android:layout_marginBottom="@dimen/margin_size"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/all_expenditure_title_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="总支出"
                        android:textColor="@color/Morandi_white" />

                    <TextView
                        android:id="@+id/all_expenditure_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/closer_margin_size"
                        android:text="0"
                        android:textColor="@color/Morandi_white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/all_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/farther_margin_size"
                    android:layout_marginStart="@dimen/margin_size"
                    android:layout_marginTop="@dimen/margin_size"
                    android:layout_marginEnd="@dimen/margin_size"
                    android:layout_marginBottom="@dimen/margin_size"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/all_income_title_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="总收入"
                        android:textColor="@color/Morandi_white" />

                    <TextView
                        android:id="@+id/all_income_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/closer_margin_size"
                        android:text="0"
                        android:textColor="@color/Morandi_white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/all_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="false"
                    android:layout_marginStart="@dimen/farther_margin_size"
                    android:layout_marginTop="@dimen/farther_margin_size"
                    android:layout_marginEnd="@dimen/farther_margin_size"
                    android:layout_marginBottom="@dimen/farther_margin_size"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/all_surplus_title_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="总结余"
                        android:textColor="@color/Morandi_white" />

                    <TextView
                        android:id="@+id/all_surplus_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/closer_margin_size"
                        android:text="0"
                        android:textColor="@color/Morandi_white" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <!--<com.donkingliang.groupedadapter.widget.StickyHeaderLayout-->
    <!--android:id="@+id/sticky_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>

    <!--</com.donkingliang.groupedadapter.widget.StickyHeaderLayout>-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
