<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    tools:context="com.loancold.activity.AddBillActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Morandi_black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_size"
                app:srcCompat="@drawable/ic_return"
                app:tint="@color/Morandi_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:layout_weight="1"
                android:text="添加账单"
                android:textColor="@color/Morandi_white"
                android:textSize="@dimen/title_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="金额"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

            <EditText
                android:id="@+id/etMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="时间"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="2020/09/29 13:20"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="收支类别"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="支出"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="账单类别"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="餐饮 / 外卖"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="账户"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="微信"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="币种"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="CNY"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="成员"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="父亲"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="商家"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <TextView
                android:id="@+id/tvFirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="欧亚声学"
                android:textColor="@color/Morandi_black"
                android:textSize="@dimen/heavier_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:text="项目"
                android:textColor="@color/Morandi_gray"
                android:textSize="@dimen/heavier_text_size" />

            <EditText
                android:id="@+id/etItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="text" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/closer_margin_size"
            android:layout_weight="1"
            android:background="@color/Morandi_light_rice"
            android:text="修改" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/closer_margin_size"
            android:layout_weight="1"
            android:background="@color/Morandi__light_pink"
            android:hapticFeedbackEnabled="false"
            android:text="删除" />
    </LinearLayout>


</RelativeLayout>